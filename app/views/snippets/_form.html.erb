<%= form_for @snippet, :html => { :class => "form-horizontal snippet" } do |f| %>

  <% if @snippet.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@snippet.errors.count, "error") %> prohibited this snippet from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @snippet.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%=f.error_span(:title) %>
  </div>
  <div class="form-group">
    <%= f.label :work, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_area :work, :class => 'form-control' %>
    </div>
    <%=f.error_span(:work) %>
  </div>
  <div class="form-group">
    <%= f.label :kind_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select(:kind_id, Kind.order("name"), :id, :name, {}, {class: 'form-control'}) %>
    <%=f.error_span(:kind_id) %>
  </div>
  <div class="form-group">
    <%= f.label :is_private, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.check_box :is_private, :class => 'form-control' %>
    <%=f.error_span(:is_private) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                snippets_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
