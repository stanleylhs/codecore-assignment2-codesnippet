<% @snippets.each do |snippet| %>
  <div>
    <h1><%= link_to snippet.title, snippet_path(snippet) %></h1>
    <div><%= markdown(snippet.work) %></div>
    <dl>
      <dt>Kind: </dt>
      <dd><%= snippet.kind.name %></dd>
    </dl>
    <dl>
      <dt>Created at: </dt>
      <dd><%=l snippet.created_at %></dd>
    </dl>
    <dl>
      <dt>Created by: </dt>
      <dd><%= snippet.user_full_name %></dd>
    </dl>
    <% if can? :manage, snippet %>
      <%= link_to t('.edit', :default => t("helpers.links.edit")),
                  edit_snippet_path(snippet), :class => 'btn btn-default btn-xs' %>
      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  snippet_path(snippet),
                  :method => :delete,
                  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                  :class => 'btn btn-xs btn-danger' %>
    <% end %>
    <hr>
  </div>
<% end %>

