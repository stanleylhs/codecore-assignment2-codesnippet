<%- model_class = Snippet -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<div class="table-responsive"><table class="table table-striped table-hover">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th class="work"><%= model_class.human_attribute_name(:work) %></th>
      <th><%= model_class.human_attribute_name(:kind_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @snippets.each do |snippet| %>
      <tr>
        <td><%= link_to snippet.id, snippet_path(snippet) %></td>
        <td><%= snippet.title %></td>
        <td class="work"><%= markdown(snippet.work) %></td>
        <td><%= snippet.kind.name %></td>
        <td><%=l snippet.created_at %></td>
        <td>
          <%# TODO: hide butoon %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_snippet_path(snippet), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      snippet_path(snippet),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table></div>