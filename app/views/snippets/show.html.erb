<%- model_class = Snippet -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<%= link_to t('.back', :default => t("helpers.links.back")),
              snippets_path, :class => 'btn btn-default'  %>
<% if can? :manage, @snippet %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_snippet_path(@snippet), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                snippet_path(@snippet),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
<% end %>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @snippet.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:work) %>:</strong></dt>
  <dd><%= markdown(@snippet.work) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:kind_id) %>:</strong></dt>
  <dd><%= @snippet.kind.name %></dd>
</dl>

